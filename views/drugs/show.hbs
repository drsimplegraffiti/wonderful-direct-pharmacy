<head>
    <script src="https://raw.githack.com/eKoopmans/html2pdf/master/dist/html2pdf.bundle.js"></script>
</head>
<div id="invoice">
    <h6>Dashboard</h6>
    <button class="waves-effect waves-light" onclick="generatePDF()">Generate Pdf</button>
    <a href="/flutter" class="flutter-button">Make Payment</a>
<div class="row">
    <div class="col s12 m8">
        <h3>{{drug.drugName}}
            <small>{{{editIcon drug.user user drug._id false}}}</small>
        </h3>
        <div class="card drug">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{drug.jobRole}}}
                {{{drug.usageCase}}}
                {{{drug.quantity}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{drug.user.displayName}}</span>
                <img src="{{drug.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/drugs/user/{{drug.user._id}}">More From {{drug.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
<script>
    function generatePDF() {
        const element = document.getElementById('invoice');
        html2pdf()
            .from(element)
            .save();

    }
</script>

</div>